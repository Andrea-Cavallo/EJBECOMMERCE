  <servlet>
  <servlet-name>insert</servlet-name>
  <servlet-class>srv.UserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>insert</servlet-name>
  <url-pattern>/User</url-pattern>
  </servlet-mapping>
  
  
   <servlet>
  <servlet-name>product</servlet-name>
  <servlet-class>srv.ProductServlet</servlet-class>
  </servlet>
